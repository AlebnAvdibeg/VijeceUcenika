<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('heads') %>
        <title>
            <%= news.title %>
        </title>
        <style>
            .carousel-item {
                background-size: cover;
                background-position: 50% 50%;
                height: 35rem;
                background-color: rgb(0,0,0,.2);
                background-blend-mode: soft-light;
                width: 100%;
            }
            .con {
                display: grid;
                grid-template-columns: 2fr 1fr;
                gap: 2rem;
                padding: 2rem;
            }
            .con h2 {
                text-wrap: nowrap;
            }
            #news {
                display: grid;
                grid-template-columns: 1fr;
                grid-auto-rows: 16rem;
                gap: 1rem;
            }
            .carousel-control-prev, .carousel-control-next {
                width: 10%;
            }
            @media (max-width: 1224px) {
    #news {
        grid-auto-rows: 13rem;
    }
    .carousel-item {
        height: 30rem;
    }
}
@media (max-width: 1024px) {
    #news {
        grid-auto-rows: 13rem;
    }
    .carousel-item {
        height: 25rem;
    }
}
@media (max-width: 790px) {
    .con {
        grid-template-columns: 1fr;
    }
    #news {
        grid-template-columns: 1fr;
        grid-auto-rows: 16rem;
        justify-items: center;
    }
}
@media (max-width: 580px) {
    #news {
        grid-template-columns: 1fr;
        grid-auto-rows: 13rem 13rem 13rem;
        justify-items: center;
    }
    .carousel-item {
        height: 20rem;
    }
}
        </style>
</head>
<body>
    <div class="con">
        <div>
            <div>
                <% news.tags.split('').forEach(function(tag) { %>
                    <span class="badge rounded-pill tag<%= tag %>"> </span>
                <% }); %>
            </div>
            <h1 class="mt-1">
                <%= news.title %>
            </h1>
            <p>
                <%= news.date %>
            </p>
            <div id="slider" class="carousel slide mt-3" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% news.images.forEach(function(image, i) { %>
                        <div class="carousel-item
                                        <% if(!i) { %>
                                            active
                                        <% } %>
                                    " style="background-image: url('/images/<%= image %>');">
                        </div>
                    <% }); %>
                </div>
                <% if(news.images.length> 1) { %>
                    <button onclick="this.blur()" class="carousel-control-prev" type="button" data-bs-target="#slider"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button onclick="this.blur()" class="carousel-control-next" type="button" data-bs-target="#slider"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                <% } %>
            </div>
            <div class="mt-3">
                <%- news.description %>
            </div>
            <% if(news.files && news.files.length) { %>
                <h2 class="mt-4 pb-2 border-bottom">Prilo≈æeni fileovi</h2>
                <iframe src="https://drive.google.com/embeddedfolderview?id=<%= news.drive %>#list" style="width:100%; height:600px; border:0;"></iframe>
            <% } %>
        </div>
        <div id="ss">
            <h2 class="pb-2 border-bottom">Najnovije aktivnosti</h2>
            <div id="news" class="py-3">
                <% newss.forEach(function(neww) { %>
                    <div class="news-card p-4 text-white text-shadow-1"
                        style="background-image: url('/images/<%= neww.images[0] %>');"
                        onclick="window.location.href='/news/<%= neww._id %>'">
                        <p class="pt-5 mt-5 lh-1 fw-bold" style="cursor: pointer;">
                            <%= neww.title %>
                        </p>
                        <p class="mt-2">
                            <%= neww.date %>
                        </p>
                        <div class="card-tags">
                            <% neww.tags.split('').forEach(function(tag) { %>
                                <span class="badge rounded-pill tag<%= tag %>"> </span>
                            <% }); %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <%- include('search') %>
</body>
</html>
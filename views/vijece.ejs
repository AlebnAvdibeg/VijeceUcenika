            </div>
        </div>
    </div>
    <div id="f2" class="modal fade">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Predloži temu ili aktivnost</h1>
                    <button class="btn-close" id="f2b"></button>
                  </div>
                  <div class="modal-body">
                    Predloži temu za buduću sjednicu ili aktivnost koja se treba objaviti na našem websiteu.
                  </div>
                  <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-primary" onclick="window.open('https://docs.google.com/forms/d/e/1FAIpQLSdathtBZIR94mdSo0ZBjgxFsB_dU0JGiLwZdQEY4FVIKO66iA/viewform?usp=dialog', '_blank').focus()">Popuni formular</button>
                  </div>
            </div>
        </div>
    </div>
    <%- include('search') %>
    <script>
        let f1 = document.querySelector("#f1"), f1b = document.querySelector("#f1b"), f2 = document.getElementById("f2"), f2b = document.querySelector("#f2b");
        document.getElementById("b1").addEventListener("click", () => {
            document.body.classList.add('disable');
            f1.classList.add('show');
        });
        document.querySelector("#b2").addEventListener("click", () => {
            document.body.classList.add('disable');
            f2.classList.add('show');
        });
        function close(f, e) {
            if (e.target != e.currentTarget) return;
            f.classList.remove('show');
            document.body.classList.remove('disable');
        }
        f1.addEventListener('click', (e) => close(f1, e));
        f1b.addEventListener('click', (e) => close(f1, e));
        f2.addEventListener('click', (e) => close(f2, e));
        f2b.addEventListener('click', (e) => close(f2, e));
    </script>
</body>
</html>